@model PostsModel

<div class="container">
    @foreach (var post in Model.Posts)
    {
        <div class="post">
            <h2 class="title">
                <a href="@Url.Content($"~{post.Path}")">@post.Title</a>
            </h2>
            <p class="submitted">
                posted on @post.Date.ToString("MMM dd, yyyy")
            </p>
            <div class="summary">
                @Html.Raw(post.Summary)
            </div>
        </div>
    }

    <p class="d-flex">
        @if (Model.Posts.HasPreviousPage)
        {
            <a href="@Url.Content($"/blog/{Model.Posts.PageIndex - 1}")" class="mr-auto btn btn-light">previous</a>
        }

        @if (Model.Posts.HasNextPage)
        {
            <a href="@Url.Content($"/blog/{Model.Posts.PageIndex + 1}")" class="ml-auto btn btn-light">next</a>
        }
    </p>

</div>